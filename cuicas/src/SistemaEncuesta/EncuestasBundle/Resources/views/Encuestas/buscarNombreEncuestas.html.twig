{% extends '::frontend.html.twig' %}
{% block title %}Buscar Encuestas por Nombre{% endblock %}
{% block titulo %}Buscar Encuesta{% endblock %}
{% block cuerpo %}


<form action="{{ path('encuestas_buscar_nombre') }}" method="post" novalidate {{ form_enctype(formulario) }} >
	{% for mensaje in app.session.flashbag.get('info') %}
		<script language=Javascript>
		$(document).ready(function(){
			$(this).tab('show');
			BootstrapDialog.show({
				title: 'Mensaje',
				message: ('{{ mensaje }}'),
				buttons: [{
					id: 'btn-ok',   
					//icon: 'glyphicon glyphicon-check',       
					label: 'Aceptar',
					cssClass: 'btn btn-default',
					autospin: false,
					action: function(dialogRef){    
						dialogRef.close();
					}
				}]
			})
		});
		</script>
	{% endfor %}

	{{ form_errors(formulario) }}
	<div class="col-xs-12 col-md-4 col-md-offset-5">
		<div class="row">
			<div class="col-xs-12 col-md-7">
				{{ form_widget(formulario) }}
			</div>
		</div>
	{{ form_rest(formulario) }}
	</div>

	<div class="col-xs-12 col-md-12">
        <div class="row">
            <div class="col-md-12">
                <center><input class="boton_nombre_buscar fueraoverflow btn btn-default" type="submit" value="Buscar" /></center>
            </div> 
        </div>
    </div>
</form>
{% endblock %}    