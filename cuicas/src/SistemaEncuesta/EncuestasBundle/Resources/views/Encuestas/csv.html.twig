{% extends '::frontend.html.twig' %}
{% block title %}CSV{% endblock %}
{% block titulo %}CSV{% endblock %}
{% block cuerpo %}

	<div class="col-xs-12 col-md-8 col-md-offset-2">
		<div class="row">
			<div class="col-xs-12">
				<table id="tabla1" class="table stacktable table-hover" border="0">
					<thead>
						<th>Encuestas</th>
						<th colspan="2"><center>Exportar a un archivo CSV</center></th>
					</thead>                 
	    			{% for encuesta in pagination %}
		  				<tr>	
								<td>{{ encuesta.nombreEncuesta }}</td>
								{% if encuesta.tipoEncuesta == "general" %}
									<td align="center"><a href="{{ path('encuestas_csv',{'id_encuesta': encuesta.id,'repuesta':'no_asignado'}) }}" class="clsBoton">Tel&eacute;fonos no asginados</a></td>
									<td align="center"> 
											<a href="{{ path('encuestas_csv',{'id_encuesta': encuesta.id,'repuesta':'errado'}) }}" class="clsBoton">Tel&eacute;fonos errados</a>
			    				</td>
		    				{% endif %}
		    				{% if encuesta.tipoEncuesta != "general" %}
		    					<td align="center" colspan="2"><a href="{{ path('encuestas_ver_detalles_reporte',{'id_encuesta': encuesta.id}) }}" class="clsBoton">Reporte de {{encuesta.tipoEncuesta}}</a></td>
		    				{% endif %}		    				
		    			</tr>
	    			{% endfor %}
				</table>
			</div>
		</div>
	</div>

	<div class="col-xs-12 col-md-5 col-md-offset-5 text-right">
		<div class="row">
			<div class="col-xs-12">
				{{ knp_pagination_render(pagination) }}
			</div>
		</div>
	</div>

{% endblock %}    