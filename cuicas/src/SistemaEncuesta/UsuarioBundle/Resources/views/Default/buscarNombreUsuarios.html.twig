{% extends '::frontend.html.twig' %}
{% block title %}Buscar Usuarios por Nombre{% endblock %}
{% block titulo %}Buscar Usuarios{% endblock %}
{% block cuerpo %}

	<form action="{{ path('usuarios_buscar_nombre') }}" method="post" {{	form_enctype(formulario) }} >
	{{ form_errors(formulario) }}
	{% for mensaje in app.session.flashbag.get('info') %}
		<script language=Javascript>
			$(document).ready(function(){
				$(this).tab('show');
				BootstrapDialog.show({
					title: 'Mensaje',
					message: ('{{ mensaje }}'),
					buttons: [{
						id: 'btn-ok',   
						//icon: 'glyphicon glyphicon-check',       
						label: 'Aceptar',
						cssClass: 'btn btn-default',
						autospin: false,
						action: function(dialogRef){    
							dialogRef.close();
						}
					}]
				})
			});
		</script>
	{% endfor %}	
		<div class="col-xs-12 col-md-4 col-md-offset-5">
		<div class="row">
			<div class="col-xs-12 col-md-7">
				{{ form_widget(formulario) }}
			</div>
		</div>
	{{ form_rest(formulario) }}
	</div>

	<div class="col-xs-12 col-md-12">
        <div class="row">
            <div class="col-md-12">
                <center><input class="fueraoverflow btn btn-default" type="submit" value="Buscar" /></center>
            </div> 
        </div>
    </div>

        {#
	<div>
		<strong><div id='labelfechafin'>Fecha Fin</div></strong>		
		<span>{{ form_widget(formulario.fechaFin) }}</span>
		<div class="error">{{ form_errors(formulario.fechaFin) }}</div>
	</div>
#}

	</form>
{% endblock %}    
