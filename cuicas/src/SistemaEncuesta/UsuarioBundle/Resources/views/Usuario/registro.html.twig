{# {% spaceless %} #}
<form action="{{ path('usuario_registro') }}" method="post" {{	form_enctype(formulario) }}>
	{{ form_errors(formulario) }}
	{% for mensaje in app.session.flashbag.get('info') %}
		<script language=Javascript>
			$(document).ready(function(){
				$(this).tab('show');
				BootstrapDialog.show({
					title: 'Mensaje',
					message: ('{{ mensaje }}'),
					buttons: [{
						id: 'btn-ok',   
						//icon: 'glyphicon glyphicon-check',       
						label: 'Aceptar',
						cssClass: 'btn btn-default',
						autospin: false,
						action: function(dialogRef){    
							dialogRef.close();
						}
					}]
				})
			});
		</script>
	{% endfor %}	
	{{ form_errors(formulario) }}
	{# Esta es la manera para controlar cada elemento del formulario #}
	
	<div class="col-xs-12 col-md-4 col-md-offset-2">
		<div class="row">
			<div class="col-md-12">
				<strong>{{ form_label(formulario.nombres)}}</strong>
				{{ form_widget(formulario.nombres) }}
			</div>
		</div>
		<div class="row">
			<div class="col-md-12">
				<strong>{{ form_label(formulario.apellidos)}}</strong>
				{{ form_widget(formulario.apellidos) }}
			</div>
		</div>
		<div class="row">
			<div class="col-md-12">
				<strong>{{ form_label(formulario.cedula)}}</strong>
				{{ form_widget(formulario.cedula) }}
			</div>
		</div>
		<div class="row">
			<div class="col-md-12">
				<strong>{{ form_label(formulario.email)}}</strong>
				{{ form_widget(formulario.email) }}
			</div>
		</div>
	</div>
	<div class="col-xs-12 col-md-4">
		<div class="row">
			<div class="col-md-12">
				<strong>{{ form_label(formulario.password.first)}}</strong>
				{{ form_widget(formulario.password.first) }}
			</div>
		</div>
		<div class="row">
			<div class="col-md-12">
				<strong>{{ form_label(formulario.password.second)}}</strong>
				{{ form_widget(formulario.password.second) }}
			</div>
		</div>
		<div class="row">
			<div class="col-md-12">
				<strong>{{ form_label(formulario.roles)}}</strong>
				{{ form_widget(formulario.roles) }}
			</div>
		</div>
		<div class="row">
			<div class="col-md-12">
				<strong>{{ form_label(formulario.prioridad)}}</strong>
				{{ form_widget(formulario.prioridad) }}
			</div>
		</div>
	</div>

	{{ form_widget(formulario._token) }}

	<div class="col-xs-12 col-md-12">
		<div class="row">
			<div class="col-md-12">
				<center><input class="fueraoverflow btn btn-default" type="submit" value="Guardar" />
	 			<a href="{{ path('sistema_Encuesta_principal_homepage') }}" > <input class="fueraoverflow btn btn-default" type="button" value="Cancelar" /></a></center>
			</div>
		</div>
	</div>
</form>
